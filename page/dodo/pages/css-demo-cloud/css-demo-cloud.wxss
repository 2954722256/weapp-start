
.sky {
  height: 480px;
  background: #007fd5;
  position: relative;
  overflow: hidden;
  animation: sky_background 50s ease-out infinite;
}

.sky .clouds_one {
  background: url("./img/cloud_one.png");
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 300%;
  animation: cloud_one 50s linear infinite;
  transform: translate3d(0, 0, 0);
}

.sky .clouds_two {
  background: url("./img/cloud_two.png");
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 300%;
  animation: cloud_two 75s linear infinite;
  transform: translate3d(0, 0, 0);
}


  /*background: url("../../resources/cloud/cloud_three.png");*/
  /*background: url("./img/cloud_three.png");*/
.sky .clouds_three {
  background: url("./img/cloud_three.png");
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 300%;
  animation: cloud_three 100s linear infinite;
  transform: translate3d(0, 0, 0);
}

@keyframes cloud_one {
  0% {
	left: 0
  }
  100% {
	left: -200%
  }
}

@keyframes cloud_two {
  0% {
	left: 0
  }
  100% {
	left: -200%
  }
}


@keyframes cloud_three {
  0% {
	left: 0
  }
  100% {
	left: -200%
  }
}